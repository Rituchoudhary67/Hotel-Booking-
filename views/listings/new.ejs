<body>
    <h3>Create a New Listing</h3>
    <form action="/listings" method="POST">
        <input type="text" name="listing[title]" placeholder="Enter title">
        <br><br>
        <textarea name="listing[description]" placeholder="Enter description" id=""></textarea>
        <br><br>
        <input name="listing[image]" placeholder="Enter image URL/Link" type="text">
        <br><br>
        <input type="number" name="listing[price]" id="" placeholder="Enter price">
        <br><br>
        <input type="text" name="listing[country]" placeholder="enter country" id="">
        <br><br>
        <input type="text" name="listing[location]" placeholder="enter location">
        <br><br>
        <button>ADD</button>
    </form>
</body>
